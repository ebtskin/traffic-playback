server {
  listen    80;
  server_name localhost;

  location / {
    mirror /mirror;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_pass http://127.0.0.1:8080/;
  }

  location /mirror {
    internal;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_pass http://127.0.0.1:8080/traffic_capture.php?secure=$https&proto=$server_protocol&host=$host&uri=$request_uri&method=$request_method&time=$msec;
  }
}
